#!/usr/bin/env bash

# Function to dig a domain or subdomain and format the output
dig_and_format() {
    local domain=$1
    local result=$(dig +short $domain)

    if [ -n "$result" ]; then
        # Assuming A record for simplicity. Modify as needed for other record types
        echo "The subdomain $domain is a A record and points to $result"
    else
        echo "No information found for $domain"
    fi
}

# Main script logic
if [ $# -eq 1 ]; then
    # Handle only domain case
    domain=$1
    dig_and_format "www.$domain"
    dig_and_format "lb-01.$domain"
    dig_and_format "web-01.$domain"
    dig_and_format "web-02.$domain"
elif [ $# -eq 2 ]; then
    # Handle domain and subdomain case
    subdomain="$2.$1"
    dig_and_format "$subdomain"
else
    echo "Invalid arguments"
fi
